{
  "name": "aiva",
  "displayName": "Aiva",
  "version": "1.1.0",
  "description": "A beautiful dark theme with Aiva - your friendly coding companion that reacts to your code errors!",
  "publisher": "sam-thisha",
  "icon": "assets/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/thisha-me/aiva"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run copy-assets",
    "compile": "tsc -p ./",
    "copy-assets": "cp src/aiva-face/*.css src/aiva-face/*.html out/aiva-face/ 2>/dev/null || mkdir -p out/aiva-face && cp src/aiva-face/*.css src/aiva-face/*.html out/aiva-face/",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "theme",
    "dark",
    "color theme"
  ],
  "categories": [
    "Themes"
  ],
  "author": "thisha-me",
  "license": "MIT",
  "type": "commonjs",
  "contributes": {
    "themes": [
      {
        "label": "Aiva Neon",
        "uiTheme": "vs-dark",
        "path": "./themes/aiva-neon.json"
      },
      {
        "label": "Aiva Mint",
        "uiTheme": "vs-dark",
        "path": "./themes/aiva-mint.json"
      }
    ],
    "views": {
      "explorer": [
        {
          "icon": "assets/icon.png",
          "type": "webview",
          "id": "aiva.hello",
          "name": "Aiva",
          "contextualTitle": "Explorer",
          "visibility": "visible"
        }
      ]
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.0.0",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0"
  }
}