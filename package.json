{
  "name": "aiva",
  "displayName": "Aiva",
  "version": "1.0.1",
  "description": "",
  "publisher": "sam-thisha",
  "icon": "assets/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/thisha-me/aiva"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "activationEvents": [
    "onView:aiva.hello"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Aiva",
        "uiTheme": "vs-dark",
        "path": "./themes/aiva.json"
      }
    ],
    "views": {
      "explorer": [
        {
          "icon": "assets/icon.png",
          "type": "webview",
          "id": "aiva.hello",
          "name": "Aiva",
          "contextualTitle": "Explorer",
          "visibility": "visible"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "typescript-eslint": "^8.0.0"
  }
}